<div class="container-fluid cover-image lazyload p-0 h-100"
  data-bg="assets/jj-ying-215319.jpg">
  <div class="container-fluid color-overlay p-0 h-100">

    <main class="container h-100 cover" role="main">
      <div class="row h-100 align-items-center">
        <div class="col">

          <div class="row">
            <div class="col text-center">
              <%= inline_svg "logo.svg", class: "logo",
                aria: true, title: "draw logo" %>
              <p class="slogan">Focus on drawing.</p>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col text-center">
              <%= link_to "female",
                "requests/female/photos/#{random_photo_for("female")}",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "male",
                "requests/male/photos/#{random_photo_for("male")}",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "face",
                "requests/face/photos/#{random_photo_for("face")}",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "animal",
                "requests/animal/photos/#{random_photo_for("animal")}",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "flower",
                "requests/flower/photos/#{random_photo_for("flower")}",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "scenery",
                "requests/scenery/photos/#{random_photo_for("scenery")}",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
            </div>
          </div>

        </div>
      </div>
    </main>

  </div>
</div>
