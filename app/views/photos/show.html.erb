<main class="container flex-grow" role="main">

  <div class="row" data-turbolinks="false">
    <div class="col">
      <a href="<%= photo_url %>">
        <img class="lazyload img-fluid" src="<%= @photo.urls.thumb %>"
          data-src="<%= @photo.urls.regular %>" alt="<%= @request.query %>">
      </a>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col photo-credit text-center">
      <%= link_to "Photo", @photo.links.html %> by
        <%= link_to @photo.user.name, @photo.user.links.html %> /
        <%= link_to "Unsplash", "https://unsplash.com/" %>
    </div>
  </div>

</main>
