<div class="container-fluid cover-image lazyload p-0 h-100"
  data-bg="assets/jj-ying-215319.jpg">
  <div class="container-fluid color-overlay p-0 h-100">

    <main class="container h-100 cover" role="main">
      <div class="row h-100 align-items-center">
        <div class="col">

          <div class="row">
            <div class="col text-center">
              <%= inline_svg "logo.svg", class: "logo",
                aria: true, title: "draw logo" %>
              <p class="slogan">Focus on drawing.</p>
            </div>
          </div>

          <div class="row mt-3">
            <div class="col text-center">
              <%= link_to "female", "/photos/female",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "male", "/photos/male",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "face", "/photos/face",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "animal", "/photos/animal",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "flower", "/photos/flower",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
              <%= link_to "scenery", "/photos/scenery",
                class: "btn btn-outline-secondary btn-lg mb-3 mx-1" %>
            </div>
          </div>

        </div>
      </div>
    </main>

  </div>
</div>
